<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/home">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <EditText
        android:layout_width="315sp"
        android:layout_height="40sp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint="#1E88E5"
        android:padding="10dip"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/register_name"
        android:layout_below="@+id/tool_bar"
        android:layout_alignStart="@+id/register_password"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="315sp"
        android:layout_height="40sp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#1E88E5"
        android:padding="10dip"
        android:id="@+id/register_password"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/register_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="315sp"
        android:layout_height="40sp"
        android:inputType="textEmailAddress"
        android:id="@+id/register_email"
        android:layout_below="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_marginTop="44dp"
        android:hint="Email"
        android:background="@drawable/rounded_edittext"
        android:textColorHint="#1E88E5"
        android:padding="10dip"
        android:layout_alignEnd="@+id/register_password" />

    <EditText
        android:layout_width="315sp"
        android:layout_height="90sp"
        android:inputType="textPostalAddress"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/register_address"
        android:layout_below="@+id/register_email"
        android:layout_alignStart="@+id/register_email"
        android:layout_marginTop="42dp"
        android:textColorHint="#1E88E5"
        android:padding="10dip"
        android:hint="Address"/>

    <EditText
        android:layout_width="315sp"
        android:layout_height="40sp"
        android:inputType="phone"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/register_phone"
        android:hint="Phone"
        android:textColorHint="#1E88E5"
        android:layout_below="@+id/register_address"
        android:layout_alignStart="@+id/register_address"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/register_register"
        android:elevation="10dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/oval"
        android:src="@drawable/ss"
        android:layout_gravity="right|bottom"
        android:layout_below="@+id/register_phone"
        android:layout_centerHorizontal="true" />
</RelativeLayout>