<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/home">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <EditText
        android:layout_width="315sp"
        android:layout_height="60sp"
        android:inputType="textPersonName"
        android:padding="10dip"
        android:id="@+id/main_name"
        android:layout_marginTop="105dp"
        android:background="@drawable/rounded_edittext"
        android:hint=" Name"
        android:textColorHint="#1E88E5"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/user"/>

    <EditText
        android:layout_width="315sp"
        android:layout_height="55sp"
        android:inputType="textPassword"
        android:id="@+id/main_password"
        android:textColor="#2196F3"
        android:background="@drawable/rounded_edittext"
        android:padding="10dip"
        android:hint=" Password"
        android:textColorHint="#1E88E5"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/main_name"
        android:layout_alignStart="@+id/main_name"
        android:drawableLeft="@drawable/paswd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOGIN"
        android:textSize="30sp"
        android:textColor="#1E88E5"
        android:id="@+id/textView"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/main_register"
        android:background="@drawable/oval"
        android:elevation="10dp"
        android:layout_marginBottom="37dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/fbtn"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        style="?android:attr/borderlessButtonStyle"
        android:textSize="25sp"
        android:textColor="#E3F2FD"
        android:id="@+id/main_login"
        android:layout_below="@+id/main_password"
        android:layout_marginTop="37dp"
        android:layout_alignEnd="@+id/main_password"
        android:layout_alignStart="@+id/main_password"
        android:background="@drawable/btn"

        />




</RelativeLayout>
